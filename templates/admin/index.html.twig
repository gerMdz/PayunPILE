{% extends 'base_admin_board.html.twig' %}

{% block title %}Admin {% endblock %}

{% block encabezado %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }

        .card:hover {
            box-shadow: 4px 4px 3px #9c27b0 !important;
            transform: scale(1.1);
        }

    </style>

    <div class="example-wrapper">
        <h3 style="font-family: ArialNova, sans-serif;">Panel Administraci√≥n <br/>{{ base.siteName | default('Reserva') }}</h3>
    </div>

{% endblock %}

{% block content %}

    <div class="row justify-content-center ">
        <div class="col-sm-12">
            <div class="row">
                {% if (is_granted("ROLE_ADMIN")) %}
                    <div class="col-sm-6 col-md-4 col-lg-3 mx-auto d-flex align-self-stretch">
                        <div class="card">
                            <a class="rounded" href="{{ path('meta_base_index') }}">
                                <div class="row">
                                    <div class="col-md-3 align-self-center text-center pl-4 pt-sm-2">
                                        <i class="fas fa-map fa-4x text-primary"></i>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="card-body text-center">
                                            <h5 class="card-title text-uppercase ">Meta datos</h5>
                                            <p class="card-text">
                                                Los datos que identifican tu web
                                            </p>
                                            <p class="card-text">
                                                <small class="text-secondary">
                                                    <i class="fas fa-mouse-pointer"></i> Administrar
                                                </small>
                                            </p>
                                        </div>
                                    </div>
                                </div>

                            </a>
                        </div>
                    </div>
                {% endif %}
                {% if (is_granted("ROLE_ADMIN_RESERVA")) %}
                    {# {% include 'admin/list_metabase.html.twig' %} #}
                    <div class="col-sm-6 col-md-4 col-lg-3  mx-auto d-flex align-self-stretch">
                        <div class="card">
                            <a class="rounded" href="{{ path('celebracion_index') }}">
                                <div class="row ">
                                    <div class="col-md-3 align-self-center text-center pl-4 pt-sm-2">
                                        <i class="fas fa-calendar-alt fa-4x text-primary px-4"></i>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="card-body text-center">
                                            <h5 class="card-title text-uppercase ">Celebraciones</h5>
                                            <p class="card-text">
                                                Datos de la celebraciones
                                            </p>
                                            <p class="card-text">
                                                <small class="text-secondary">
                                                    <i class="fas fa-mouse-pointer"></i> Administrar
                                                </small>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>

                {% endif %}
                {% if (is_granted("ROLE_RESERVA")) %}
                    <div class="col-sm-6 col-md-4 col-lg-3  mx-auto d-flex align-self-stretch">
                        <div class="card">
                        <a class="rounded" href="{{ path('reserva_consulta') }}">
                            <div class="row ">
                                <div class="col-md-3 align-self-center text-center pl-4 pt-sm-2">
                                    <i class="far fa-calendar-check fa-4x text-primary"></i>
                                </div>
                                <div class="col-md-9">
                                    <div class="card-body text-center">
                                        <h5 class="card-title text-uppercase ">Reservas</h5>
                                        <p class="card-text">
                                            Consulta de reservas
                                        </p>
                                        <p class="card-text">
                                            <small class="text-secondary">
                                                <i class="fas fa-mouse-pointer"></i> Administrar
                                            </small>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </a>
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-4 col-lg-3  mx-auto d-flex align-self-stretch">
                        <div class="card">
                        <a class="rounded" href="{{ path('reserva_lectura') }}">
                            <div class="row ">
                                <div class="col-md-3 align-self-center text-center pl-4 pt-sm-2">
                                    <i class="far fa-calendar-check fa-4x text-primary"></i>
                                </div>
                                <div class="col-md-9">
                                    <div class="card-body text-center">
                                        <h5 class="card-title text-uppercase ">Lectura QR</h5>
                                        <p class="card-text">
                                            Lectura QR para registrar la asistencia
                                        </p>
                                        <p class="card-text">
                                            <small class="text-secondary">
                                                <i class="fas fa-mouse-pointer"></i> Administrar
                                            </small>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </a>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block jslocal %}
    {{ parent() }}
    <script>
        $('#admin').addClass('active');
    </script>

{% endblock %}